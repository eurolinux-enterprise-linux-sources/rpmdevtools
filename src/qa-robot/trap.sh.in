#!/bin/sh

: ${__exit_traps:=}

add_trap()
{
	# TODO: quote args
	__exit_traps="$*
$__exit_traps"
}

remove_trap()
{
	# TODO: quote args
	__exit_traps="$(printf %s "$__exit_traps" |grep -Fvx "$*")"
}

trap_atexit()
{
	local t_rc=$?
	trap - EXIT
	eval "$__exit_traps"
	exit $t_rc
}

if [ -z "$__exit_traps" ]; then
	__exit_traps=:
	trap trap_atexit EXIT HUP INT QUIT PIPE TERM
fi

: <<'__EOF__'

=head1	NAME

trap.sh - manage exit traps

=head1	SYNOPSIS

  #!/bin/sh
  . __PKGDATADIR__/trap.sh
  lockfile -r0 "$workdir"/lock || exit
  add_trap rm -f "$workdir"/lock

